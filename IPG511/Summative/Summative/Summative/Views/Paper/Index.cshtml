@model IEnumerable<Summative.Models.Paper>

@{
    ViewBag.Title = "Papers";
}

<h2>Submitted Papers</h2>

<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th scope="col">
            ID
        </th>
        <th scope="col">
            Title
        </th>
        <th scope="col">
           Author
        </th>
    </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.PaperId)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td scope="row">@item.AuthorName.Substring(0, item.AuthorName.LastIndexOf('@'))</td>
        </tr>
    }

</table>
