@model Summative.Models.PaperViewModel

@{
    ViewBag.Title = "MyPapers";
}

<h2>My Papers</h2>

<p>
    @Html.ActionLink("Submit New Paper", "Create")
</p>
<table class="table">
    <tr>
        <th>
           ID
        </th>
        <th>
           Title
        </th>
        <th>
           Submission Date
        </th>
        <th>
          Topic
        </th>

        <th></th>
    </tr>

@foreach (var item in Model.Papers) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PaperId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubmissionDate)
        </td>
        <td>
            @Model.Topics.SingleOrDefault(s => s.TopicId == item.TopicId).TopicName
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PaperId }, new {@class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PaperId }, new { @class = "btn btn-danger", @onclick = "confirm(\"are you sure you want to delete?\")" })
        </td>
    </tr>
}

</table>
